<h1>Editar libro</h1>

<%= simple_form_for @book, :html => { :multipart => true } do |f| %>
	<%= f.select :category_id, @categories %>
	<%= f.file_field :book_img %>
	<%= f.input :title, label:"Título del libro" %>
	<%= f.input :description, label:"Decripción" %>
	<%= f.input :author, label:"Autor" %>
	<%= f.button :submit %>
<% end %>