<div class="row">

<div class="col-md-4">
	<%= image_tag @book.book_img.url(:book_show), class: "book-show" %>
</div>

<div class="col-md-8">
	<h2><%= @book.title %></h2>
	<h3><%= @book.author %></h3>
	<p><%= @book.description %></p>
</div>

</div>

<div class="row">
	<div class="col-md-4">
		<!-- Lugar para las calificaciones  -->
		<%= render @book.reviews %>
		
		<div>
			<%= link_to "Añadir reseña", new_book_review_path(@book) %>
		</div>
	</div>
</div>

<%= link_to "Home", root_path %>

<% if user_signed_in? %>
<% if @book.user_id == current_user.id %>
<%= link_to "Editar", edit_book_path(@book) %>
<%= link_to "Eliminar", book_path(@book), method: :delete, data: { confirm: "¿Está seguro que quiere realizar esta acción?"} %>
<% end %>

<% end %>